<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.music">

    <!-- 权限声明 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".util.ApplicationUtil"
        android:allowBackup="true"
        android:icon="@drawable/app_img"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/app_img"
        android:supportsRtl="true"
        android:theme="@style/MyTheme"
        android:usesCleartextTraffic="true">

        <!-- Launcher Activity -->
        <activity android:name=".activity.login.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 其他Activity -->
        <activity android:name=".activity.login.RegisterActivity" />
        <activity android:name=".activity.login.LoginActivity"/>
        <activity android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyTheme.NoActionBar" />
        <activity android:name=".fragment.bottom.PlayMusicActivity" />

        <!-- 服务 -->
        <service android:name=".service.DownLoadService"
            android:enabled="true"
            android:exported="true" />
        <service android:name=".service.MusicService"
            android:enabled="true"
            android:exported="true" />

        <!-- 广播接收器 -->
        <receiver android:name=".broadcast.SongChangeReceiver"
            android:enabled="true"
            android:exported="true" />

    </application>
</manifest>
