<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/my_padding"
    android:paddingRight="@dimen/my_padding"
    android:paddingTop="5dp">
    <ImageView
        android:id="@+id/song_img"
        android:layout_width="@dimen/small_image"
        android:layout_height="@dimen/small_image"
        android:paddingRight="@dimen/my_padding"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/normal_font"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/song_singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/small_font"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>